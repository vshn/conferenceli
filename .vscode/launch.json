{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "contactform/app.py",
                "FLASK_ENV": "development",
                "PYTHONPATH": "${workspaceFolder}/contactform"
            },
            "args": [
                "run",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}